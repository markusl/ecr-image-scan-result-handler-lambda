{
    "compilerOptions": {
        "module": "commonjs",
        "lib": ["es2017"],
        "outDir": "dist",
        "inlineSourceMap": true,
        "inlineSources": true,
        "target": "ES2017",
        "types": [ "node" ],
        "moduleResolution": "node",
        "typeRoots": [
          "./node_modules/@types"
        ],
        "strict": true,
        "noUnusedLocals": true,
    },
    "include": [
      "*.ts"
    ]
}
